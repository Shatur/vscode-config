{
    // Built-in settings
    "terminal.external.linuxExec": "konsole",
    "files.insertFinalNewline": true,
    "git.confirmSync": false,
    "editor.gotoLocation.alternativeDeclarationCommand": "editor.action.revealDefinition",
    "editor.gotoLocation.alternativeDefinitionCommand": "editor.action.revealDeclaration",
    "editor.gotoLocation.alternativeTypeDefinitionCommand": "editor.action.revealDeclaration",
    "editor.renderWhitespace": "all",
    "editor.cursorBlinking": "phase",
    "editor.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": true,
    "workbench.list.smoothScrolling": true,
    "workbench.tree.indent": 16,
    "workbench.colorTheme": "Atomize",
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#abb2bf",
        "editorCursor.background": "#3b4049",
    },
    "workbench.enableExperiments": false,
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    "extensions.showRecommendationsOnlyOnDemand": true,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "update.mode": "none",

    // Plugins
    "githubPullRequests.telemetry.enabled": false,
    "gitTreeCompare.iconsMinimal": true,
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "C_Cpp.vcpkg.enabled": false,
    "CppHelper.HeaderGuardPattern": "{FILE}_H",
    "cmake.configureOnOpen": true,
    "cmake.buildDirectory": "${workspaceFolder}/../${workspaceFolderBasename}-${generator}-${buildType}",
    "cmake.copyCompileCommands": "${workspaceFolder}/compile_commands.json",
    "cmake.preferredGenerators": [
        "Ninja"
    ],
    "cmakeExplorer.buildDir": "${buildDirectory}",
    "markdown.extension.toc.updateOnSave": false,
    "vscode-neovim.neovimPath": "nvim",
    "vscode-neovim.useCtrlKeysForInsertMode": false,
    "vscode-neovim.easymotionOnTop": true,
    "cSpell.language": "en,ru",
    "cSpell.showStatus": false,
    "cSpell.spellCheckDelayMs": 300,
    "cSpell.languageSettings": [
        {
            "languageId": "markdown",
            "ignoreRegExpList": [
                "`.*?`",
                "```(.|\n)*?```"
            ]
        },
        {
            "languageId": "gdscript",
            "includeRegExpList": [
                "\t*# (?!warning-ignore:).*"
            ]
        },
        {
            "languageId": "cpp",
            "includeRegExpList": [
                "CStyleComment"
            ]
        },
        {
            "languageId": "c",
            "includeRegExpList": [
                "CStyleComment"
            ]
        }
    ],
    "cSpell.enabledLanguageIds": [
        "c",
        "cpp",
        "git-commit",
        "html",
        "jsonc",
        "markdown",
        "plaintext",
        "python",
        "gdscript",
    ],
    "projectManager.git.maxDepthRecursion": 1,
    "projectManager.git.baseFolders": [
        "/mnt/Files/Git"
    ],
    "projectManager.git.ignoredFolders": [
        "AUR"
    ],
    "projectManager.any.maxDepthRecursion": 1,
    "projectManager.any.baseFolders": [
        "/mnt/Files/Code"
    ],
    "C_Cpp.clang_format_path": "/usr/bin/clang-format",
    "godot_tools.editor_path": "/usr/bin/godot"
}
