{
    // Built-in settings
    "terminal.external.linuxExec": "konsole",
    "files.insertFinalNewline": true,
    "git.allowForcePush": true,
    "git.confirmSync": false,
    "git.detectSubmodules": false,
    "window.titleBarStyle": "custom",
    "editor.gotoLocation.alternativeDeclarationCommand": "editor.action.revealDefinition",
    "editor.gotoLocation.alternativeDefinitionCommand": "editor.action.revealDeclaration",
    "editor.gotoLocation.alternativeTypeDefinitionCommand": "editor.action.revealDeclaration",
    "editor.mouseWheelZoom": true,
    "editor.renderWhitespace": "all",
    "editor.cursorBlinking": "phase",
    "editor.smoothScrolling": true,
    "workbench.list.smoothScrolling": true,
    "workbench.tree.indent": 16,
    "workbench.startupEditor": "none",
    "workbench.enableExperiments": false,
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "update.mode": "none",

    // Plugins
    "githubPullRequests.telemetry.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.statusBar.enabled": false,
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "CppHelper.HeaderGuardPattern": "{FILE}_H",
    "cmake.configureOnOpen": true,
    "cmake.setBuildTypeOnMultiConfig": true,
    "cmake.buildDirectory": "${workspaceFolder}/../${workspaceFolderBasename}-${generator}-${buildType}",
    "cmake.copyCompileCommands": "${workspaceFolder}/compile_commands.json",
    "cmake.preferredGenerators": [
        "Ninja"
    ],
    "markdown.extension.toc.updateOnSave": false,
    "qttools.creator": "/usr/bin/qtcreator",
    "qttools.useExternalBrowser": true,
    "vscode-neovim.neovimExecutablePaths.linux": "nvim",
    "vscode-neovim.neovimExecutablePaths.win32": "nvim.exe",
    "vscode-neovim.useCtrlKeysForInsertMode": false,
    "vscode-neovim.textDecorationsAtTop": true,
    "cSpell.language": "en,ru",
    "cSpell.diagnosticLevel": "Hint",
    "cSpell.showStatus": false,
    "cSpell.spellCheckDelayMs": 300,
    "cSpell.languageSettings": [
        {
            "languageId": "markdown",
            "ignoreRegExpList": [
                "`.*?`",
                "```(.|\n)*?```"
            ]
        },
        {
            "languageId": "gdscript",
            "includeRegExpList": [
                "\t*# (?!warning-ignore:).*"
            ]
        },
        {
            "languageId": "cpp",
            "includeRegExpList": [
                "CStyleComment"
            ]
        },
        {
            "languageId": "c",
            "includeRegExpList": [
                "CStyleComment"
            ]
        }
    ],
    "cSpell.enabledLanguageIds": [
        "c",
        "cpp",
        "git-commit",
        "html",
        "jsonc",
        "markdown",
        "plaintext",
        "python",
        "gdscript",
    ],
    "godot_tools.editor_path": "/usr/bin/godot",
    "l13Projects.git.folders": [
        "/mnt/Files/Git"
    ],
    "errorLens.enabledDiagnosticLevels": [
        "error",
        "warning",
        "info"
    ],
    "l13Projects.useCacheForDetectedProjects": true,
    "VSCodeCounter.outputAsCSV": false,
    "VSCodeCounter.outputAsText": false,
    "VSCodeCounter.outputDirectory": ".vscode/VSCodeCounter",
    "clangd.arguments": [
        "--header-insertion=never",
        "--suggest-missing-includes",
        "--background-index",
        "-j=8",
        "--cross-file-rename",
        "--pch-storage=memory",
        "--clang-tidy",
        "--clang-tidy-checks=-clang-analyzer-*,bugprone-*,misc-*,-misc-non-private-member-variables-in-classes,performance-*,-performance-no-automatic-move,modernize-use-*,-modernize-use-nodiscard,-modernize-use-trailing-return-type"
    ],
    "diffEditor.ignoreTrimWhitespace": false
}
